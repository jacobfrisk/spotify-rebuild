---
import "../styles/style.css";
const { header, color, img } = Astro.props;
---

<a href="#">
  <article class={color}>
    <h3>{header}</h3>
    <img src={img} alt="" />
  </article>
</a>

<style>
  article {
    border-radius: 5px;
    aspect-ratio: 1/1;
    position: relative;
    overflow: hidden;
    padding: 1rem;
    color: white;
    font-size: 1rem;
  }
  .teal {
    background-color: rgb(39, 133, 106);
  }
  .blue {
    background-color: rgb(30, 50, 100);
  }
  .purple {
    background-color: rgb(141, 103, 171);
  }
  .magenta {
    background-color: rgb(232, 17, 91);
  }
  .gray {
    background-color: rgb(119, 119, 119);
  }
  .yellow {
    background-color: rgb(215, 242, 125);
  }
  .red {
    background-color: rgb(235, 30, 50);
  }

  img {
    right: -10px;
    bottom: 0;
    -webkit-box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
    box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.8);
    height: 100px;
    position: absolute;
    width: 100px;
    transform: rotate(25deg) translate(18%, -2%);
  }
</style>
